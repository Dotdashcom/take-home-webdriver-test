<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test verbose="2" preserve-order="true" name="OnlineAssessment">
        <classes>
            <class name="com.dotdash.test.Login">
                <methods>
                    <include name="successfulLogin"/>
                    <include name="failedLogin"/>
                </methods>
            </class>
            <class name="com.dotdash.test.CheckBoxes">
                <methods>
                    <include name="checkAndUncheckBoxes"/>
                </methods>
            </class>
            <class name="com.dotdash.test.ContextMenu">
                <methods>
                    <include name="clickOnContext"/>
                </methods>
            </class>
            <class name="com.dotdash.test.DragDrop">
                <methods>
                    <include name="dragAndDrop"/>
                </methods>
            </class>
            <class name="com.dotdash.test.DropDown">
                <methods>
                    <include name="clickAndSelectFromDropdown"/>
                </methods>
            </class>
            <class name="com.dotdash.test.DynamicContent">
                <methods>
                    <include name="validateDynamicElements"/>
                    <include name="validateContentChangesDynamically"/>
                </methods>
            </class>
            <class name="com.dotdash.test.DynamicControls">
                <methods>
                    <include name="validateDynamicControls"/>
                </methods>
            </class>
            <class name="com.dotdash.test.FileDownLoadAndUpload">
                <methods>
                    <include name="validateFileUpload"/>
                    <include name="validateFileDownload"/>
                </methods>
            </class>
            <class name="com.dotdash.test.FloatingMenu">
                <methods>
                    <include name="validateMenuFloats"/>
                </methods>
            </class>
            <class name="com.dotdash.test.JS">
                <methods>
                    <include name="validateJsAlert"/>
                    <include name="validateJsConfirm"/>
                    <include name="validateJsPrompt"/>
                    <include name="validateJsError"/>
                </methods>
            </class>

            <class name="com.dotdash.test.MouseHover">
                <methods>
                    <include name="validateMouseHoverText"/>
                </methods>
            </class>

            <class name="com.dotdash.test.SwitchToFrameAndWindow">
                <methods>
                    <include name="validateTextInputInFrame"/>
                    <include name="validateNewTabOpened"/>
                </methods>
            </class>
            <class name="com.dotdash.test.Notification">
                <methods>
                    <include name="validateNotificationDisplayed"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>