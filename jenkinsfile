pipeline {
  agent {
    docker {
      image 'maven:3.8.4-jdk-8'
      args '-u root'
    }
  }
  
  stages {
    stage('Build') {
      steps {
        sh 'apt-get update && apt-get install -y maven'
        sh 'mvn clean package'
      }
    }
    stage('Test') {
      steps {
        sh 'mvn test'
      }
    }
  }
}
